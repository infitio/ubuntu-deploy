{
  "name": "hellogromor",
  "vcs_identifier": "outsource-coromandel/hello-gromor",
  "builds": [
    {
      "type": "django",
      "name": "server",
      "wsgi_relative_path": "hellogromor/wsgi.py",
      "app_file": "bin/hellogromor_v{{version}}.zip",
      "tasks": {
        "cron": {
          "frequency": "*/5 * * * *",
          "management_command": "runcrons"
        }
      },
      "env": {
        "ENVIRONMENT": "production",
        "STATIC_HOST": "http://statix-alpha.coromandel.biz",
        "MEDIA_HOST": "http://media-alpha.coromandel.biz"
      },
      "deployments": {
        "default": {
          "port": 80,
          "server_name": "http://hellogromor.coromandel.biz",
          "env": {
            "DB_DSN": "hellogromor-production",
            "DB_NAME": "hellogromor"
          }
        },
        "dev": {
          "port": 80,
          "server_name": "http://dev.hellogromor.coromandel.biz",
          "env": {
            "DB_DSN": "hellogromor-dev",
            "DB_NAME": "hellogromor"
          }
        },
        "uat": {
          "port": 80,
          "server_name": "http://uat.hellogromor.coromandel.biz",
          "env": {
            "DB_DSN": "hellogromor-uat",
            "DB_NAME": "hellogromor"
          }
        }
      }
    },
    {
      "type": "adhara",
      "name": "web",
      "app_file": "bin/hellogromor-web_v{{version}}.zip"
    }
  ]
}