{
  "name": "gromorshakti",
  "vcs_identifier": "outsource-coromandel/gromor-store",
  "builds": [
    {
      "type": "django",
      "name": "server",
      "wsgi_relative_path": "shakti/wsgi.py",
      "app_file": "bin/shakti_v{{version}}.zip",
      "tasks": {
        "cron": {
          "frequency": "*/5 * * * *",
          "management_command": "runcrons"
        },
        "default_env": {
          "ENVIRONMENT": "production",
          "DB_DSN": "hellogromor-production",
          "DB_NAME": "hellogromor",
          "STATIC_HOST": "http://statix-alpha.coromande.biz",
          "MEDIA_HOST": "http://media-alpha.coromandel.biz"
        }
      },
      "deployments": {
        "default": {
          "port": 80
        },
        "dev": {
          "port": 80
        },
        "uat": {
          "port": 80
        }
      }
    }
  ]
}