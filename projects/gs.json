{
  "name": "gromorshakti",
  "vcs_identifier": "outsource-coromandel/gromor-store",
  "builds": [
    {
      "type": "django",
      "name": "server",
      "wsgi_relative_path": "shakti/wsgi.py",
      "app_file": "bin/shakti_v{{version}}.zip",
      "tasks": {
        "cron": {
          "frequency": "*/5 * * * *",
          "management_command": "runcrons"
        }
      },
      "env": {
        "ENVIRONMENT": "production",
        "STATIC_HOST": "http://statix-alpha.coromandel.biz",
        "MEDIA_HOST": "http://media-alpha.coromandel.biz"
      },
      "deployments": {
        "default": {
          "port": 80,
          "server_name": "http://live.gromorshakti.coromandel.biz",
          "env": {
            "DB_DSN": "gromorshakti-production",
            "DB_NAME": "gromorshakti"
          }
        },
        "dev": {
          "port": 80,
          "server_name": "http://dev.gromorshakti.coromandel.biz",
          "env": {
            "DB_DSN": "gromorshakti-dev",
            "DB_NAME": "gromorshakti-dev"
          }
        },
        "uat": {
          "port": 80,
          "server_name": "http://uat.gromorshakti.coromandel.biz",
          "env": {
            "DB_DSN": "gromorshakti-uat",
            "DB_NAME": "gromorshakti-uat"
          }
        }
      }
    }
  ]
}