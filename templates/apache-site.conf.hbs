Listen {{build.deployment.port}}
<VirtualHost *:{{build.deployment.port}}>
    #ServerName {{build.deployment.serverName}}
    CustomLog {{build.project.logsFolder}}/accesslog common
    ErrorLog {{build.project.logsFolder}}/errorlog
    WSGIDaemonProcess {{build.project.qualifiedName}} python-path={{build.deployPath}} python-home={{build.venvFolder}} home={{build.deployPath}} user={{runner.run_as}}
    WSGIScriptAlias / {{build.wsgiPath}} process-group={{build.project.qualifiedName}} application-group=%{GLOBAL}
    <Directory {{build.deployPath}}>
    <Files wsgi.py>
        Require all granted
    </Files>
    </Directory>
</VirtualHost>
